<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:paddingBottom="-10dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="7dp"
        card_view:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/page_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MyFBPage"
                android:textSize="10dp"
                android:paddingBottom="@dimen/text_padding"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="15dp"
                />

            <RelativeLayout
                android:id="@+id/timeline_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/itl_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/image_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher"
                        android:padding="10dp"
                        android:layout_marginBottom="8dp"
                        />
                    <TextView
                        android:id="@+id/message_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="4"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:ellipsize="end"
                        android:layout_below="@+id/image_item"
                        android:textColor="#000"
                        />
                    <TextView
                        android:id="@+id/extra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continue Reading..."
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_below="@+id/message_item"
                        android:visibility="gone"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/video_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    >
                    <com.google.android.youtube.player.YouTubeThumbnailView
                        android:id="@+id/youtube_thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="8dp"
                        android:padding="10dp"
                        />

                    <RelativeLayout
                        android:id="@+id/rl_over_thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        >

                        <ImageView
                            android:id="@+id/play_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="center"
                            android:src="@drawable/ic_play_circle_filled_black_24dp"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/title_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="4"
                        android:ellipsize="end"
                        android:layout_below="@+id/youtube_thumbnail"
                        android:textColor="#000"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        />

                </RelativeLayout>
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/timeline_wrapper"
                >
                <LinearLayout
                    android:id="@+id/datetime_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8111"
                        android:text="TIME"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="#8111"
                    android:layout_marginTop="2dp"
                    />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:id="@+id/upvote_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_thumb_up_black_24dp"
                            android:layout_marginRight="4dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Like"
                            android:textSize="10sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/downvote_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"

                        >
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_thumb_down_black_24dp"
                            android:layout_marginRight="4dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dislike"
                            android:textSize="10sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/comment_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"

                        >
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_comment_black_24dp"
                            android:layout_marginRight="4dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment"
                            android:textSize="10sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/share_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"

                        >
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_share_black_24dp"
                            android:layout_marginRight="4dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:textSize="10sp"
                            />
                    </LinearLayout>
                </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>